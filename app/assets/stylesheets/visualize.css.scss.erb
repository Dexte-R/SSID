body.visualize {
  position: relative;
  
  #visualize_menu {
    position: absolute;
    width: 210px;

    ul {
      margin: 15px 0 0;
      padding: 0;
      list-style: none;

      li {
        margin-bottom: 2px;
        background-color: rgb(255, 75, 15);
        color: rgb(255, 255, 255);

        span {
          padding: 0 5px;
        }

        a {
          color: rgb(255, 255, 255);
          padding: 0 5px;
          background-color: rgb(255, 108, 0);
          width: 200px;
          display: block;
          text-decoration: none;
        }
      }
    }
  }

  #visualize_content {
    margin-left: 240px;

    div.cluster {
      border: 1px solid #000;
      margin-bottom: 20px;
      position: relative;
      height: 600px;

      h3 {
        margin: 10px;
      }

      div.legend {
        border: 1px solid #000;
        position: absolute;
        top: 10px;
        right: 10px;
        background-color: rgb(255, 255, 255);

        h3 {
          text-align: center;
          margin: 3px;
        }

        div {
          margin: 0 5px;

          span {
            vertical-align: middle;
            display: inline-block;
            width: 100px;
          }
        }
        
        <% SubmissionClustersHelper::LEGEND_SIMILARITY_VALUES.each { |val| %>
          div.legend_<%= val %> span { 
            height: <%= SubmissionClustersHelper::LEGEND_WEIGHTS_FOR_SIMILARITY_VALUES[val]%>px;
            background-color: <%= SubmissionClustersHelper::LEGEND_COLORS_FOR_SIMILARITY_VALUES[val]%>;
          }
        <% } %>
      }

      div.canvas_wrapper {
        position: absolute;
        top: 40px;
        left: 50%;
        margin-left: -350px;
        width: 700px;
        height: 540px;

        div.node a {
          &, &:hover, &:visited {
            font-weight: bold;
            background-color: rgb(255, 255, 255);
            margin-right: 20px;
          }
          &:hover, &.is_plagiarism:hover {
            color: rgb(255, 108, 0);
          }

          &.is_plagiarism {
            color: rgb(255, 0, 0);
          }
        }
      }
    }
  }
}

body.visualize_similarity_cluster_graph {
  #options {
    margin-bottom: 20px;

    #submissions {
      height: 100px;
      vertical-align: top;
    }

    span {
      font-size: 11px;
      font-style: italic;
    }

    hr {
      margin: 15px 0;
    }

    table {
      border-spacing: 0;
      border-collapse: collapse;
      width: 100%;
      margin-bottom: 15px;

      th {
        border: 1px solid rgb(0, 0, 0);
        background-color: rgb(231, 134, 13);
        color: rgb(255, 255, 255);
        font-weight: bold;
        text-transform: uppercase;
        padding: 3px 10px;
        text-align: left;
      }

      th.num_of_clusters_col, th.cut_off_criterion_col {
        width: 90px;
      }
      
      td {
        border: 1px dotted #bbb;
        padding: 3px 10px;

        a {
          &, &:hover, &:visited {
            background-color: rgb(255, 255, 255);
            margin-right: 20px;
          }
          &:hover {
            color: rgb(255, 108, 0);
          }
        }

        a.last {
            margin-right: 0;
        }
      }
    }
  }
}
