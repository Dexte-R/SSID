<% form_tag({}, {:style => ""}) do %>
<center>
  <h1>Welcome to SSID</h1>
  <%= "<div style='color:red'>#{flash[:notice]}</div>" if flash[:notice] %>
  <fieldset style="width: 500px; border: 0px;">
    <table style="width: auto;">
      <tr>
        <td style="white-space: nowrap;">ID:</td>
        <td><%= text_field_tag :login, params[:login], :size => '15', :style => 'width:100px' %></td>
      </tr>
      <tr>
        <td style="white-space: nowrap;">Password:</td>
        <td><%= password_field_tag :password, params[:password], :size => '15', :style => 'width:100px' %></td>
      </tr>
    </table>
    <div style="margin-top: 10px;">
      <%= submit_tag "Login" %>
    </div>
  </fieldset>
</center>
<% end %>
