<% if flash[:alert] %>
  <div class="alert">
    <%= flash[:alert] %>
  </div>
<% end %>

<h2>Announcements</h2>

<% if @announcements.empty? %>
  <div class="announcement">No announcements</div>
<% else %>
  <% @announcements.each { |a| %>
    <div class="announcement">
      <h3><%= a.title + " " if a.title %></h3>
      <div><%= a.html_content.html_safe %></div>
      <span><%= a.updated_at.in_time_zone %></span>
    </div>
  <% } %>
<% end %>
