<h2>Editing Account</h2>

<% form_for(@account, :url => { :action => 'account_update', :id => @account }) do |f| %>
  <%= f.error_messages %>
  <table>
    <tr>
      <td>
        <b><%= f.label :name %></b>: <%= f.text_field :name %>
      </td>
    </tr>
    <tr>
      <td>
    <b><%= f.label :password, "New Password (Leave blank if not modifying)" %></b>: <%= f.password_field :password %><br/>
    <b><%= f.label :password_confirmation, "New Password Confirmation" %></b>: <%= f.password_field :password_confirmation %>
  </td>
  </tr>
  <tr>
    <td>
      <b><%=getDefination("min_length")%><%=genHelp("#{getExplaination("min_length")}. Default: 2.")%></b>: <%= f.text_field 'min_length' %>
    </td>
  </tr>
  <tr>
    <td>
      <b><%=getDefination("ngram")%><%=genHelp("#{getExplaination("ngram")}. Default: 4.")%></b>: <%= f.text_field 'ngram' %>
    </td>
  </tr>
  </table>
  <%= f.submit 'Update' %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= f.submit 'Reset', :type => 'reset' %>
<% end %>