<div class="breadcrumb"><%= link_to "My Modules", {:action => "course_listing"}, :class => "breadcrumbItem" %> > <%= link_to @course.code, {:action => "assignment_listing", :course_id => @course.id}, :class => "breadcrumbItem" %> > New Assignment </div>
<h2>New Assignment</h2>
<% form_for(@assignment, :url => { :action => 'assignment_create' }, :html => {:multipart => true}) do |f| %>
  <%= f.error_messages %>
  <%= hidden_field('course', 'course_id', {:value => @course.id})  %>
  <table>
    <tr>
      <td>
        Title: <%= f.text_field 'title' %>
      </td>
    </tr>
    <tr>
      <td>
        Language<%=genHelp("Programming language type.<br/>For 'java', only '.java' files will be checked.")%>: <%= f.select(:language, {
            #"Character Based Code Similarity" => 'char_code_similarity',
            #"Character Based Code Similarity" => 'char_code_similarity_java'
            
            "C (Experimental)" => "c",
            "Java" => "java"
            #"C" => "c"
          }) %> </td>
    </tr>
    <tr>
      <td>
        <%=getDefination("min_length")%><%=genHelp("#{getExplaination("min_length")}.<br/>Default: 2.")%>: <%= f.text_field 'min', :value => @user_account.min_length %>
      </td>
    </tr>
    <tr>
      <td>
        <%=getDefination("ngram")%><%=genHelp("#{getExplaination("ngram")}.<br/>Default: 4.")%>: <%= f.text_field 'ngram', :value => @user_account.ngram %>
      </td>
    </tr>
    <tr>
      <td>
        Assignment File (*.zip)<%=genHelp("A zipped file consists of multiple folders.<br/>The folder name represents student identification and student submitted codes are inside the folder.")%>: <%= file_field 'upload', 'zipfile' %>
      </td>
    </tr>
  </table>
  <p/>
  <%= f.submit 'Create', :disable_with => 'Please wait...' %>
<% end %>
