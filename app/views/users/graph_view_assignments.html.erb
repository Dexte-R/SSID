<script type="text/javascript">
  function validate() {
    var checkboxs = document.getElementsByTagName('input');
    var i;
    for (i = 0; i < checkboxs.length; i++) {
      if (checkboxs[i].type == "checkbox" && checkboxs[i].checked) {
        return true;
      }
    }

    return false;
  }
</script>
<h3 style="display:inline">This visual provides an overview of the plagiarism clusters detected in assignments</h3>
<p/>
To start, select the assignment(s) you are interested in and click <b>Show Visual</b>
<p/>
<form id="frmAssignments" action="graph_assignments">
  <table style="width: auto;">
    <tr>
      <th>Assignments</th>
    </tr>
    <% @course.assignments.each { |assignment| %>
      <tr><td><input style="margin-left: 0px;" type="checkbox" name="assignment[<%=assignment.id%>]"/><%=assignment.title%></td></tr>
        <% } %>
  </table>
  <hr/>
  <input type="submit" value="Show Visual" onclick="if (!validate()) { alert('Please select at least one assignment'); return false;}" onmouseover="Tip('The visual will be displayed in a new window');" onmouseout="UnTip();" />
  <p/>
  <div class="instruction" style="text-align: left;">Note: The visual will be displayed in a new window</div>
</form>