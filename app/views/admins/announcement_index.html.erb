<h1>Announcements</h1>
<p />
<table>
  <%
  @announcements.each do |announcement|
    acc = announcement.account
  %>
    <tr>
      <th colspan="4">
        <table cellpadding="0" cellspacing="0">
          <tr>
            <td width="50%" nowrap="true" align="left">Creator: <%=h acc.login %></td>
            <td width="50%" nowrap="true" align="right">Updated at: <%=h format_datetime(announcement.updated_at) %></td>
          </tr>
        </table>
      </th>
    </tr>
    <tr>
      <td width="100%"><%=h announcement.content %></td>
      <td style="min-width: 100px; text-align:center"><%= link_to 'Show', :action => 'announcement_show', :id => announcement %></td>
      <td style="min-width: 100px; text-align:center"><%= link_to 'Edit', :action => 'announcement_edit', :id => announcement %></td>
      <td style="min-width: 100px; text-align:center"><%= link_to 'Delete', {:action => 'announcement_delete', :id => announcement}, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
    <tr>
      <td colspan="4"><hr/></td>
    </tr>
  <% end %>
</table>
<%= link_to 'New announcement', :action => 'announcement_new' #new_announcement_path #link_to 'New', :controller => 'a', :action => 'index'
%>