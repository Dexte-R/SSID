<h1>Accounts</h1>

<table style="table-layout: fixed; width: 850px;">
  <col width="100"/>
  <col width="100"/>
  <col width="200"/>
  <col width="100"/>
  <col width="200"/>
  <col width="50"/>
  <col width="50"/>
  <col width="50"/>
  <tr>
    <th align="left">ID</th>
    <th align="left">Matric</th>
    <th align="left">Name</th>
    <th align="left">Role</th>
    <th align="left">Expiry</th>
    <th align="left" colspan="3">&nbsp;</th>
  </tr>

  <% @accounts.each do |acc| %>
    <tr>
      <td><%=h acc.login %></td>
      <td><%=h acc.matric %></td>
      <td><%=h acc.name %></td>
      <td><%= case acc.role when 0 then 'Admin' when 1 then 'User' end %></td>
      <td><%=h format_datetime(acc.expiry) %></td>      
      <td><%= link_to 'Show', :action => 'account_show', :id => acc %></td>
      <td><%= link_to 'Edit', :action => 'account_edit', :id => acc %></td>
      <td><%= link_to 'Delete', {:action => 'account_delete', :id => acc}, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
<hr />
<%= link_to 'New Account', :action => 'account_new' %>
