<table cellspacing="3">
  <tr>
    <td><b>Name: </b><%= @account.name %></td>
    <td><b>Matric: </b><%= @account.matric %></td>
  </tr>
  <tr>
    <td><b>ID: </b><%= @account.login %></td>
    <td><b>Expiry: </b><%= format_datetime(@account.expiry) %></td>
  </tr>
  <tr>
    <%
    case @account.role
    when 0: role = "Administrator"
    when 1: role = "User"
    end
  %>
    <td colspan="2"><b>Role: </b><%= role %></td>
  </tr>
</table>
<p>
  <%= link_to 'Edit', :action => 'account_edit', :id => @account %> |
  <%= link_to 'Back', :action => 'account_index' %>
</p>